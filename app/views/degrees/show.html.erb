<div class="page-header">
  <h3><%= User.find(@degree.user_id).name + "'s Degree" %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>School</dt>
      <dd><%= @degree.school %></dd>

      <dt>Degree</dt>
      <dd><%= @degree.degree %></dd>

      <dt>Graduation date</dt>
      <dd><%= @degree.graduation_date %></dd>

      <dt>User</dt>
      <dd>
        <% if @degree.user.present? %>
          <a href="/users/<%= @degree.user_id %>">
            <%= @degree.user.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/degrees" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @degree.user %>
        <a href="/degrees/<%= @degree.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_degree/<%= @degree.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
