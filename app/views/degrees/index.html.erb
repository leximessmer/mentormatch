<div class="page-header">
  <h1>
    Degrees
    <a href="/degrees/new" class="btn btn-lg btn-success">New Degree</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>School</th>
        <th>Degree</th>
        <th>Graduation date</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @degrees.each do |degree| %>
      <tr>
        <td><%= degree.school %></td>
        <td><%= degree.degree %></td>
        <td><%= degree.graduation_date %></td>
        <td><%= degree.user.name %></td>
        <td>
          <a href="/degrees/<%= degree.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == degree.user %>
            <a href="/degrees/<%= degree.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_degree/<%= degree.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @degrees, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
