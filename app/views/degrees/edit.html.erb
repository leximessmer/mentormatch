<!-- Validation failure messages -->
<% if @degree.errors.any? %>
  <% @degree.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Degree #<%= @degree.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_degree/<%= @degree.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for school -->
      <div class="form-group">
        <label for="school" class="control-label">
          School
        </label>

        <input type="text" id="school" name="school" placeholder="School" class="form-control" value="<%= @degree.school %>">
      </div>

      <!-- Label and input for degree -->
      <div class="form-group">
        <label for="degree" class="control-label">
          Degree
        </label>

        <input type="text" id="degree" name="degree" placeholder="Degree" class="form-control" value="<%= @degree.degree %>">
      </div>

      <!-- Label and input for graduation_date -->
      <div class="form-group">
        <label for="graduation_date" class="control-label">
          Graduation date
        </label>

        <input type="text" id="graduation_date" name="graduation_date" placeholder="Graduation date" class="form-control" value="<%= @degree.graduation_date %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :name, @degree.user_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Degree
      </button>
      or
      <a href="/degrees/<%= @degree.id %>">Cancel</a>
    </form>
  </div>
</div>
