<div class="page-header">
  <h3>Message from <%= @message.sender.name %> to <%= @message.recipient.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Sender</dt>
      <dd>
        <% if @message.sender.present? %>
          <a href="/users/<%= @message.sender_id %>">
            <%= @message.sender.name %>
          </a>
        <% end %>
      </dd>

      <dt>Recipient</dt>
      <dd>
        <% if @message.recipient.present? %>
          <a href="/users/<%= @message.recipient_id %>">
            <%= @message.recipient.name %>
          </a>
        <% end %>
      </dd>

      <dt>Date</dt>
      <dd><%= @message.created_at.strftime("%m/%d/%Y") %></dd>

      <dt>Body</dt>
      <dd><%= @message.body %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/messages" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @message.sender %>
        <a href="/messages/<%= @message.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_message/<%= @message.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
