<div class="page-header">
  <h1>
    Jobs
    <a href="/jobs/new" class="btn btn-lg btn-success">New Job</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Job title</th>
        <th>Employer</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Industry</th>
        <th>Actions</th>
      </tr>

      <% @jobs.where(user_id: current_user).each do |job| %>
      <tr>
        <td><%= job.job_title %></td>
        <td><%= job.employer %></td>
        <td><%= job.start_date %></td>
        <td><%= job.end_date %></td>
        <td><%= job.industry %></td>
        <td>
          <a href="/jobs/<%= job.id %>" class="btn btn-primary">Show</a>
          <a href="/jobs/<%= job.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_job/<%= job.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @jobs, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
