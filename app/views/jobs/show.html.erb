<div class="page-header">
  <h3>Job #<%= @job.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Job title</dt>
      <dd><%= @job.job_title %></dd>

      <dt>Employer</dt>
      <dd><%= @job.employer %></dd>

      <dt>Start date</dt>
      <dd><%= @job.start_date %></dd>

      <dt>End date</dt>
      <dd><%= @job.end_date %></dd>

      <dt>Industry</dt>
      <dd><%= @job.industry %></dd>

      <dt>User</dt>
      <dd><%= @job.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/jobs" class="btn btn-primary">
        Back
      </a>
      <a href="/jobs/<%= @job.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_job/<%= @job.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
